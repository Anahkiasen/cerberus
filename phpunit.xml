<phpunit
	colors="true"
	bootstrap="cerberus/tests/phpunit.php">
	<testsuites>
		<testsuite name="cerberus">
			<directory>cerberus/tests</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="json" target="tests/cerberus.json"/>
		<log type="coverage-clover" target="tests/cerberus.xml"/>
		<log
			type           = "coverage-html"
			target         = "tests/ceberus_coverage/"
			charset        = "UTF-8"
			yui            = "true"
			highlight      = "true"
			lowUpperBound  = "35"
			highLowerBound = "70"/>
	</logging>
</phpunit>